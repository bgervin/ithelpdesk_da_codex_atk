{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Incident ${number}",
                  "weight": "Bolder",
                  "size": "ExtraLarge",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${state}",
                  "color": "${if(state == 'New', 'Attention', if(state == 'In Progress', 'Good', if(state == 'Resolved', 'Good', 'Default')))}",
                  "weight": "Bolder",
                  "size": "Large",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Summary",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${short_description}",
          "wrap": true,
          "spacing": "Small"
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Description",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${description}",
          "wrap": true,
          "spacing": "Small"
        }
      ],
      "isVisible": "${!empty(description)}"
    },
    {
      "type": "Container",
      "separator": true,
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Ticket Information",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Ticket Number:",
              "value": "${number}"
            },
            {
              "title": "Priority:",
              "value": "${priority}"
            },
            {
              "title": "Urgency:",
              "value": "${urgency}"
            },
            {
              "title": "Impact:",
              "value": "${impact}"
            },
            {
              "title": "Category:",
              "value": "${category}"
            },
            {
              "title": "Subcategory:",
              "value": "${subcategory}"
            },
            {
              "title": "Opened:",
              "value": "${formatDateTime(opened_at, 'yyyy-MM-dd HH:mm:ss')}"
            },
            {
              "title": "Last Updated:",
              "value": "${formatDateTime(updated_at, 'yyyy-MM-dd HH:mm:ss')}"
            },
            {
              "title": "Assigned To:",
              "value": "${assigned_to.display_value}"
            }
          ],
          "spacing": "Small"
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Work Notes",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${work_notes}",
          "wrap": true,
          "spacing": "Small"
        }
      ],
      "isVisible": "${!empty(work_notes)}"
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "Close Notes",
          "weight": "Bolder",
          "size": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${close_notes}",
          "wrap": true,
          "spacing": "Small"
        }
      ],
      "isVisible": "${!empty(close_notes)}"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Open in ServiceNow",
      "url": "https://${instance}.service-now.com/nav_to.do?uri=incident.do?sys_id=${sys_id}",
      "iconUrl": "https://www.servicenow.com/content/dam/servicenow-assets/images/meganav/servicenow-header-logo.svg"
    },
    {
      "type": "Action.Submit",
      "title": "Add Work Notes",
      "data": {
        "action": "addNotes",
        "sys_id": "${sys_id}",
        "number": "${number}"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Update Status",
      "data": {
        "action": "updateStatus",
        "sys_id": "${sys_id}",
        "number": "${number}"
      },
      "isVisible": "${state != 'Resolved' && state != 'Closed'}"
    },
    {
      "type": "Action.Submit",
      "title": "Close Ticket",
      "data": {
        "action": "close",
        "sys_id": "${sys_id}",
        "number": "${number}"
      },
      "style": "positive",
      "isVisible": "${state != 'Resolved' && state != 'Closed'}"
    }
  ]
}
