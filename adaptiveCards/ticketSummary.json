{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Incident ${number}",
                  "weight": "Bolder",
                  "size": "Large",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "${short_description}",
                  "wrap": true,
                  "spacing": "Small"
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${state}",
                  "color": "${if(state == 'New', 'Attention', if(state == 'In Progress', 'Good', if(state == 'Resolved', 'Good', 'Default')))}",
                  "weight": "Bolder",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Priority:",
          "value": "${priority}"
        },
        {
          "title": "Urgency:",
          "value": "${urgency}"
        },
        {
          "title": "Opened:",
          "value": "${formatDateTime(opened_at, 'yyyy-MM-dd HH:mm')}"
        },
        {
          "title": "Updated:",
          "value": "${formatDateTime(updated_at, 'yyyy-MM-dd HH:mm')}"
        }
      ],
      "spacing": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "${description}",
      "wrap": true,
      "spacing": "Medium",
      "isVisible": "${!empty(description)}"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View in ServiceNow",
      "url": "https://${instance}.service-now.com/nav_to.do?uri=incident.do?sys_id=${sys_id}"
    },
    {
      "type": "Action.Submit",
      "title": "Update Ticket",
      "data": {
        "action": "update",
        "sys_id": "${sys_id}",
        "number": "${number}"
      }
    },
    {
      "type": "Action.Submit",
      "title": "Close Ticket",
      "data": {
        "action": "close",
        "sys_id": "${sys_id}",
        "number": "${number}"
      },
      "isVisible": "${state != 'Resolved' && state != 'Closed'}"
    }
  ]
}
