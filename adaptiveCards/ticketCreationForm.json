{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Create New Incident",
      "weight": "Bolder",
      "size": "Large"
    },
    {
      "type": "TextBlock",
      "text": "Please provide the following information about your IT issue:",
      "wrap": true,
      "spacing": "Small",
      "isSubtle": true
    },
    {
      "type": "Input.Text",
      "id": "shortDescription",
      "label": "Short Description",
      "placeholder": "Brief summary of the issue",
      "isRequired": true,
      "errorMessage": "Short description is required",
      "maxLength": 160
    },
    {
      "type": "Input.Text",
      "id": "description",
      "label": "Detailed Description",
      "placeholder": "Provide detailed information about the issue, including any error messages",
      "isMultiline": true,
      "isRequired": true,
      "errorMessage": "Detailed description is required"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "urgency",
      "label": "Urgency",
      "value": "3",
      "isRequired": true,
      "choices": [
        {
          "title": "High - Critical business impact",
          "value": "1"
        },
        {
          "title": "Medium - Significant impact",
          "value": "2"
        },
        {
          "title": "Low - Minor impact",
          "value": "3"
        }
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "id": "category",
      "label": "Category",
      "placeholder": "Select a category",
      "isRequired": false,
      "choices": [
        {
          "title": "Hardware",
          "value": "Hardware"
        },
        {
          "title": "Software",
          "value": "Software"
        },
        {
          "title": "Network",
          "value": "Network"
        },
        {
          "title": "Email",
          "value": "Email"
        },
        {
          "title": "Access/Password",
          "value": "Access"
        },
        {
          "title": "Other",
          "value": "Other"
        }
      ]
    },
    {
      "type": "Input.Text",
      "id": "subcategory",
      "label": "Subcategory (Optional)",
      "placeholder": "e.g., Outlook, Laptop, WiFi",
      "isRequired": false
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "ℹ️ Your ticket will be created and assigned to the appropriate support team.",
          "wrap": true,
          "size": "Small",
          "isSubtle": true
        }
      ],
      "spacing": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Create Ticket",
      "data": {
        "action": "submitTicket"
      },
      "style": "positive"
    },
    {
      "type": "Action.Submit",
      "title": "Cancel",
      "data": {
        "action": "cancel"
      }
    }
  ]
}
