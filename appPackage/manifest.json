{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
  "manifestVersion": "1.17",
  "id": "${{TEAMS_APP_ID}}",
  "version": "1.0.0",
  "developer": {
    "name": "IT Helpdesk Team",
    "websiteUrl": "https://www.example.com",
    "privacyUrl": "https://www.example.com/privacy",
    "termsOfUseUrl": "https://www.example.com/termsofuse"
  },
  "name": {
    "short": "IT Helpdesk Agent",
    "full": "IT Helpdesk ServiceNow Agent"
  },
  "description": {
    "short": "IT helpdesk assistant for ServiceNow",
    "full": "An intelligent IT helpdesk assistant that helps manage ServiceNow tickets, answer common support questions, and streamline IT support workflows through M365 Copilot."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#FFFFFF",
  "copilotAgents": {
    "declarativeAgents": [
      {
        "id": "ithelpdesk-agent",
        "file": "declarativeAgent.json"
      }
    ]
  },
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "${{SERVICENOW_INSTANCE}}.service-now.com"
  ]
}
